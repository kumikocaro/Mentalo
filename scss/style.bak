* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;   
  }
  
  header {
    background: black;
    margin: 0;
    
  }
  
  .LogoNav {
    vertical-align: middle;
    
  }

  .nav-links {
    display: flex;
  }
  
  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    
  }
  
  nav ul li,
  nav ul li a {
    display: inline-block;
    text-decoration: none;
    margin: 5px;
    font-size: larger;
    font-family: 'Roboto', sans-serif;
    color: white;
    transition: color 0.3s;    
    padding-top:30px;
  }
  
  nav ul li:hover a {
    color: #2A446A;
  }
  
  nav img {
    margin:0 ;
    max-height: 100px;
    margin-right: 10px; 
  }
  
  #FondoConcept {
    background-image: url(../img/fondo_disco.png); 
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center; 
    width: 100%;
    height: 800px;
    padding: 20px;
  }
  
  main {
    background-color: #101010;
    color: white;
    font-family: 'Roboto', sans-serif;
    padding-left: 2rem;
    padding-right: 2rem;
    padding-top: 5rem;
    padding-bottom: 3rem; 
  }
  
  main p { 
    color: #9c9c9c;  
  }
  
  main img { 
    max-width: 100%; 
    height: auto;
    margin-bottom: 10px;
  }
  
  main a { 
    text-decoration: none;
  }
  
  footer {
    background-color: rgb(37, 37, 37);
    height: 150px;
    padding-top: 40px;
    text-align: left;
    font-family: 'Roboto', sans-serif;
    color: white;
    padding-left: 200px;
    font-weight: bold;
  }
  
  footer ul {
    list-style: none; 
    display: flex;
    margin-top: 10px;
    padding: 0;
  }
  
  footer ul li {
    margin-right: 10px; 
  }
  
  footer ul li a {
    text-decoration: none; 
    color: white; 
  }
  
  audio {
    width: 500px;
    margin-top: 10px;
  }
  
  audio::-webkit-media-controls-panel {
    background-color: #494949;
    border-radius: 0; 
  }
  
  audio::-webkit-media-controls-play-button {
    background-color: #494949;
    border: 1px solid #494949; 
  }
  
  audio::-webkit-media-controls-volume-slider {
    background-color: #494949;
    border: 1px solid #494949; 
  }
  
  audio::-webkit-media-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  video {
    width: 800px;
  }
  
  .contact-form {
    background-color: #6e6e6e;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  
  h2 {
    text-align: center;
  }
  
  label {
    display: block;
    margin-bottom: 8px;
  }
  
  input,
  textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
  }
  
  button {
    background-color: black;
    color: rgb(151, 151, 151);
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }
  
  button:hover {
    background-color: #2A446A;
  }
  
  .boton_arriba img {
    width: 20px;
  }
  
  .boton_arriba p {
    font-weight: bold;
    color: white;
  }
  
  .boton_arriba img { 
    width: 12px;
  }
  
  video {
    width: 630px;
  }
  
  .prensa { 
    display: flex;
    justify-content: center; /* Alinea los elementos en el centro horizontalmente */
    align-items: center; /* Alinea los elementos en el centro verticalmente */
    flex-direction: column; /* Si los elementos est√°n apilados verticalmente */
    margin: 10px; /* Espacio entre elementos */
  }
  
  @media screen and (max-width: 1200px) {
    .nav-links li {
      margin: 10px 0;
    }
  
    header {
      padding: 0px;
    }
  
    #logo {
      max-height: 40px; 
    }
    
    .menuNav { 
      font-size: xx-small;
      margin: 0px;
    }
    
    nav img {
      vertical-align: middle; 
      margin: 0px;
      padding: 0px;
    }
  
    #FondoConcept {
      background-image: url(../img/fondo_mob.jpg); 
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center; 
      width: 100%;
      height: 800px;
      padding: 20px;
    }
  }
  
  @media screen and (max-width: 576px) {
    footer {
      background-color: rgb(37, 37, 37);
      height: 150px;
      text-align: center;
      font-family: 'Roboto', sans-serif;
      color: white;
      padding: 10px;
      font-weight: bold;
    }
  
    footer ul  { 
      margin-left: 140px;
    }
  
    video { 
      width: 300px;
    }
  
    audio { 
      width: 300px;
    }
  }
  